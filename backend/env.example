# ========================================
# SPA BACKEND ENVIRONMENT VARIABLES
# ========================================

# ========================================
# NODE ENVIRONMENT
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=mongodb://localhost:27017/spa-backend
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/spa-backend

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# ========================================
# SECURITY SETTINGS
# ========================================
# Rate limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=3600000

# Request limits
JSON_LIMIT=10mb

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ========================================
# SOCIAL AUTHENTICATION
# ========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# ========================================
# EMAIL CONFIGURATION
# ========================================
# For nodemailer (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourspa.com

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# File upload limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ========================================
# ADMIN SETUP
# ========================================
# Admin creation secret (for initial setup only)
ADMIN_CREATION_SECRET=your-admin-creation-secret-change-this

# ========================================
# BUSINESS CONFIGURATION
# ========================================
# Business hours (24-hour format)
BUSINESS_OPEN_HOUR=9
BUSINESS_CLOSE_HOUR=18
BUSINESS_DAYS=1,2,3,4,5,6,0

# Timezone
TIMEZONE=UTC

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ========================================
# MONITORING & ANALYTICS
# ========================================
# Add your monitoring service keys here
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ========================================
# PAYMENT GATEWAY (if needed)
# ========================================
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ========================================
# SMS GATEWAY (if needed)
# ========================================
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number 